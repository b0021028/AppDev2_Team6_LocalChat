<Window x:Class="LocalChat.MainForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LocalChat"
        mc:Ignorable="d"
        Title="MainForm" Height="450" Width="800">
    <Grid HorizontalAlignment="Right" Width="800">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0*"/>
        </Grid.RowDefinitions>
        <Button Content="Button" HorizontalAlignment="Left" Margin="0,84,0,0" Height="38" VerticalAlignment="Top" Width="117" Click="UserChange"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="0,122,0,0" VerticalAlignment="Top" Height="38" Width="117" Click="UserChange2"/>
        <Button Content="設定" HorizontalAlignment="Left" Height="41" Margin="0,393,0,0" VerticalAlignment="Top" Width="62"/>
        <Label Content="既存のチャット" HorizontalAlignment="Left" Margin="0,58,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="MessageBox" HorizontalAlignment="Left" Height="27" Margin="280,393,0,0" TextWrapping="Wrap" Text="[新しいメッセージの入力]" VerticalAlignment="Top" Width="276" TextChanged="TextBox_TextChanged" Background="{x:Null}"/>

    </Grid>
</Window>
