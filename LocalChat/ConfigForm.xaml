<Window x:Class="LocalChat.ConfigForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LocalChat"
        mc:Ignorable="d"
        Title="設定画面" Height="400" Width="550">
    <Grid>
        <Button x:Name="OkButton" Content="OK" HorizontalAlignment="Left" Margin="75,0,0,25" VerticalAlignment="Bottom" Width="100" Height="25" Click="OkButton_Click"/>
        <Button x:Name="CancelButton" Content="キャンセル" HorizontalAlignment="Right" Margin="0,0,75,25" VerticalAlignment="Bottom" Height="25" Width="100" Click="CancelButton_Click"/>
        <ScrollViewer Margin="25,25,25,69" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <StackPanel x:Name="ConfigerContents" VerticalAlignment="Top" Margin="10,10,0,0" HorizontalAlignment="Left"/>
        </ScrollViewer>

    </Grid>
</Window>
